# =============================================================================
# Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =============================================================================

# =============================================================================
# Azure OpenAI Configuration (Required)
# =============================================================================

# Your Azure OpenAI resource endpoint
# Format: https://YOUR-RESOURCE-NAME.openai.azure.com
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# Your Azure OpenAI API key
# Location: Azure Portal > Your OpenAI Resource > Keys and Endpoint
AZURE_OPENAI_KEY=your-api-key-here

# API versions (different for chat vs embeddings)
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_EMBEDDING_API_VERSION=2023-05-15

# Deployment names (create these in Azure OpenAI Studio)
AZURE_OPENAI_DEPLOYMENT_CHAT=gpt-4.1
AZURE_OPENAI_DEPLOYMENT_CHAT_MINI=gpt-4.1-mini
AZURE_OPENAI_DEPLOYMENT_EMBEDDING=text-embedding-ada-002

# =============================================================================
# Supabase Configuration (Required for authentication)
# =============================================================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Server settings
HOST=0.0.0.0
PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# Optional: Azure Key Vault (for production)
# =============================================================================

# AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/
